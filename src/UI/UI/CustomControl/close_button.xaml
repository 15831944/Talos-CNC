<UserControl x:Class="UI.CustomControl.close_button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MouseEnter="Image_MouseEnter" MouseMove="Image_MouseMove" MouseUp="Image_MouseUp">
    <Grid MouseEnter="Image_MouseEnter" MouseMove="Image_MouseMove" MouseUp="Image_MouseUp">
        <StackPanel MouseEnter="Image_MouseEnter" MouseMove="Image_MouseMove" MouseUp="Image_MouseUp">
            <Image Source="../icons/close.png"
                       Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" Height="32" Width="32" MouseEnter="Image_MouseEnter" MouseMove="Image_MouseMove" MouseUp="Image_MouseUp"/>
            <Label Content="Close" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" HorizontalContentAlignment="Right" MouseEnter="Image_MouseEnter" MouseMove="Image_MouseMove" MouseUp="Image_MouseUp"
                       VerticalAlignment="Stretch" VerticalContentAlignment="Center" FontSize="20" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
